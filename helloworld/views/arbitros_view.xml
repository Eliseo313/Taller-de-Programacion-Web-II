<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- vista tipo form del modelo helloworld.arbitros -->	
		<record model="ir.ui.view" id="arbitros_form">
            <field name="name">helloworld.arbitros.form</field>
            <field name="model">helloworld.arbitros</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Datos de arbitro">
						<field name="photo" placeholder="Fotografia" widget="image" options="{'size':[50,50]}"/>
						<field name="name" placeholder="Nombre del arbitro"/>
						<field name="liga_id" placeholder="Liga"/>
                    </group>
                </sheet>
            </form>
            </field>
		</record>

        <!-- vista tipo tree del modelo helloworld.arbitros -->	
		<record model="ir.ui.view" id="helloworld_arbitros_tree">
			<field name="name">helloworld.arbitros.tree</field>
			<field name="model">helloworld.arbitros</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="arbitros" >
                        <field name="photo" options="{'size':[20,20]}" />
                        <field name="name" />
						<field name="liga_id" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="helloworld_arbitros_search">
			<field name="name">helloworld.arbitros.search</field>
			<field name="model">helloworld.arbitros</field>
			<field name="arch" type="xml">
				<search>
                        <field name="name" />
						<field name="liga_id" />
				</search>
			</field>
		</record>



		<!-- ACCION PARA EL MODELO helloworld.arbitros -->	
		<record id="helloworld_arbitros_action" model="ir.actions.act_window">
			<field name="name">Arbitros</field>
			<field name="res_model">helloworld.arbitros</field>
			<field name="view_mode">tree,form</field>
		</record>

</odoo>